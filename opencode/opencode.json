{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse",
      "enabled": true
    }
  },
  "formatter": {
    "uv-ruff-lint": {
      "extensions": [".py"],
      "command": ["uvx", "ruff", "check", "--fix", "$FILE"]
    },
    "uv-ruff-format": {
      "extensions": [".py"],
      "command": ["uvx", "ruff", "format", "$FILE"]
    },
  }
}
